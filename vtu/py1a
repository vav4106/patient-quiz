a=int(input("Enter a number:"))
b=int(input("Enter a number:"))
choice=int(input("Enter the choice number:"))
if(choice==1):
    c=a+b
    print("addition",c)
elif(choice==2):
    d=a-b
    print("subtraction",d)
elif(choice==3):
    e=a*b
    print("multiplication",e)
elif(choice==4):
    if b!=0:
        f=a/b
        print("division",f)
    else:
        print("Error!Division by zero is not allowed")
else:
    print("Invalid choice")