a=int(input("Enter a number:"))
b=int(input("Enter a number:"))
choice=int(input("Enter a choice number:"))
if choice==1:
    c=a+b
    print("addition",c)
elif choice==2:
    d=a-b
    print("subraction",d)
elif choice==3:
    e=a*b
    print("multiplication",e)
elif choice==4:
    if b!=0:
        f=a/b
        print("division",f)
    else:
        print("we cannot divide the number by zero")
else:
    print("Invalid choice")
