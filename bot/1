import random

def simple_chatbot():
    """A simple rule-based AI chatbot."""

    greetings = ["Hello!", "Hi there!", "Hey! What can I help you with?", "Greetings! How can I assist you today?"]
    farewells = ["Goodbye!", "See you later!", "Have a great day!", "Bye!"]
    about_bot = ["I am a simple Python program designed to chat.", "I'm a bot, but I'm doing well, thank you for asking!"]

    print("ChatBot: Hi! I am a simple chatbot. How can I help you today?")

    while True:
        user_input = input("You: ").lower()

        if user_input in ["bye", "goodbye", "see you"]:
            print(f"ChatBot: {random.choice(farewells)}")
            break
        elif any(word in user_input for word in ["hello", "hi", "hey"]):
            print(f"ChatBot: {random.choice(greetings)}")
        elif any(word in user_input for word in ["how are you", "what's up", "how are you doing"]):
            print(f"ChatBot: {random.choice(about_bot)}")
        elif "your name" in user_input:
            print("ChatBot: You can call me SimpleBot.")
        else:
            print("ChatBot: Sorry, I don't understand that. Try asking something simple like 'hello' or 'bye'.")

if __name__ == "__main__":
    simple_chatbot()
