function login(){let p=document.getElementById("phone").value;if(p===""){alert("Enter phone number");return;}document.getElementById("loginBox").style.display="none";document.getElementById("dashboard").style.display="block";}
function setLanguage(){currentLang=document.getElementById("language").value;if(currentDisease) showDisease(currentDisease);}
function showDisease(d){currentDisease=d;qIndex=0;let info=data[d][currentLang];document.getElementById("content").innerHTML="<h3>"+d.toUpperCase()+"</h3>"+info;lastContent=info;loadQuiz();}
function loadQuiz(){let q=data[currentDisease].quiz[qIndex];document.getElementById("question").innerHTML="<b>"+q.q+"</b>";document.getElementById("opt1").innerText=q.o[0];document.getElementById("opt2").innerText=q.o[1];document.getElementById("opt3").innerText=q.o[2];resetButtons();}
function resetButtons(){opt1.className="";opt2.className="";opt3.className="";}
function checkAnswer(sel){let q=data[currentDisease].quiz[qIndex];if(sel===q.a){score+=10;document.getElementById("score").innerText=score;document.getElementById("opt"+(sel+1)).className="correct";}else{score-=5;document.getElementById("score").innerText=score;document.getElementById("opt"+(sel+1)).className="wrong";}qIndex++;if(qIndex<data[currentDisease].quiz.length){setTimeout(loadQuiz,1000);}}
function speak(){let u=new SpeechSynthesisUtterance(lastContent);let map={en:"en-US",hi:"hi-IN",te:"te-IN",kn:"kn-IN"};u.lang=map[currentLang];speechSynthesis.speak(u);}
</script>
